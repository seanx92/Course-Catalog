<title>Course Catalog</title>

<h1>Course Catalog</h1>

<p>
<%= link_to t(".courses"), courses_path%> <br>
<%= link_to t(".subjects"), subjects_path%> <br>
<%= link_to t(".instructors"), instructors_path%> <br>
<%= link_to "Search", "/search"%> <br>
</p>

Enrolled courses:<br>

<table>
  <thead>
    <tr>
      <th>Course id</th>
      <th>Course name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_id %></td>
        <td><%= course.course_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
