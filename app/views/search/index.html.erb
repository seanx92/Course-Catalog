<h1>Search courses</h1>

<p>
	<form name="query" action="/search">
	  Subject:
    <select name="subject_id">
		  <option value="<%=options_for_select(@subjects)%>"></option>
	  </select><br>
    Course name:
    <input type="text" name="course_name">
	  <input type="submit" value="Search">
  </form>

  <table>
    <thead>
      <tr>
        <th>Course id</th>
        <th>Course name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @results.each do |course| %>
        <tr>
          <td><%= course.course_id %></td>
          <td><%= course.course_name %></td>
          <td><%= button_to"Enroll", {:controller=>"enrollments", :action=>"create", :user_id=>current_user.id, :course_id=>course.course_id, :course_name=>course.course_name} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<p>
